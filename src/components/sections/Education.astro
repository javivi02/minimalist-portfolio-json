---
import Section from '../Section.astro'

import { education } from '../../../cv.json'
---

<Section title="EducaciÃ³n">
  <ul>
    {
      education.map(({ image, institution, startDate, endDate, area, url }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : 'Actual'
        const years = `${startYear} - ${endYear}`

        return (
          <li>
            <article>
              <header>
                <div>
                  <img src={image} alt={institution}/>
                  <a href={url} title={`Ver ${institution}`} target="_blank">
                    <h3>{institution}</h3>
                  </a>
                </div>

                <time>{years}</time>
              </header>

              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: var(--color_article);
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  div {
    display: flex;
    align-items: center;
  }

  img {
    width: 32px;
    height: 32px;
    border-radius: 6px;
    margin-right: 8px;
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }

  a:hover{
    text-decoration: underline;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
